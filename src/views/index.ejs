
<% include partials/_header %>

    <div class="container">
        <div class="row">
            <!--FORM-->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div class="form-group">
                                <input type="text" name="title" placeholder="Inserta un titulo" class="form-control">
                            </div>
                            <div class="form-group">
                                <textarea name="description" cols="80" placeholder="Inserta una descripcion" class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                               <input name="date" type="date" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Agregar</button>
                        </form>
                    </div>
                </div>
            </div>
            <!--TABLE-->
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>NÂ°</th>
                            <th>Titulo</th>
                            <th>Descripcion</th>
                            <th>Fecha</th>
                            <th>Operacion</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i= 0; i<tasks.length; i++) {%>
                            <tr>
                                <td><%= i+1 %></td>
                                <td><%= tasks[i].title %></td>
                                <td><%= tasks[i].description %></td>
                                <td><%= formatDate[i] %></td>
                                <td>
                                    <div class="group-button" style="display: flex;">
                                        <a href="/turn/<%= tasks[i]._id %>" 
                                            class="btn btn-sm <%= tasks[i].status ? 'btn-success': 'btn-dark'%>" style="margin: .65rem;">
                                            <i class="fas fa-check"></i>
                                        </a>
                                        <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger btn-sm" style="margin:.65rem;">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                        <a href="/edit/<%= tasks[i]._id %>" class="btn btn-info btn-sm" style="margin:.65rem;">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% }%>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<% include partials/_footer %>
